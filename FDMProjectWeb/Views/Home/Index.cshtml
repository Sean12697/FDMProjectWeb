@{
    ViewData["Title"] = "Home Page";
}
<h1>Upload File</h1>
<div class="row">
    <section>
        <form method="post" enctype="multipart/form-data"
              asp-controller="Home" asp-action="Post">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload data in CSV:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </section>
</div>
<hr />
